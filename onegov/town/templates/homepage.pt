<div metal:use-macro="layout.base" i18n:domain="onegov.town">
    <tal:block metal:fill-slot="title">
        ${title}
    </tal:block>
    <tal:block metal:fill-slot="content">
        <div class="row homepage">
            <div class="columns small-12 medium-8 large-8">
                <metal:block use-macro="layout.macros['homepage-tiles']" />
                <div class="row latest-news" tal:condition="news">
                    <div class="columns small-12">
                        <div metal:use-macro="layout.macros.newslist" tal:define="heading 'h3'; show_all_news_link True" />
                    </div>
                </div>
            </div>
            <div class="columns small-12 medium-4 large-4 homepage-links" tal:condition="panels">
                <div class="homepage-panel" tal:repeat="panel panels">
                    <h2>${panel.title}</h2>
                    <metal:block use-macro="layout.macros['panel-links']" />
                </div>
            </div>
        </div>
    </tal:block>
</div>